<div class="container">
{{#if data}}
<h3 class="text-success">Edit Article</h3>
<form method="post">
   <div class="form-group has-success">
    <label class="text-primary">
         Title:
    </label>
    <textarea rows="3" class="form-control form-control-success mb-4"  name="title">{{data.title}}</textarea>
  </div>
   <div class="form-group has-success">
    <label class="text-primary">
         Status:
    </label>
    <textarea rows="3" class="form-control form-control-success mb-4"  name="status">{{data.status}}</textarea>
  </div>
   <div class="form-group has-success">
    <label class="text-primary">
         Full Content:
    </label>
    <textarea rows="3" class="form-control form-control-success mb-4"  name="fullContent">{{data.full_content}}</textarea>
  </div>
  <div class="form-group has-success">
    <label class="text-primary">
         Short Content:
    </label>
    <textarea rows="3" class="form-control form-control-success mb-4"  name="shortContent">{{data.short_content}}</textarea>
  </div>
  <div class="form-group has-success">
    <label class="text-primary">
         Image:
    </label>
    <textarea rows="3" class="form-control form-control-success mb-4"  name="image">{{data.image}}</textarea>
  </div>
    <button class="btn btn-lg btn-danger" type="submit">Submit</button>
</form>
{{else}}
<h3 class="text-success">Add Article</h3>
<form method="post">
 <div class="form-group has-success">
    <label class="text-primary">
         Article Id:
    </label>
    <textarea rows="3" class="form-control form-control-success mb-4"  name="articleId"></textarea>
  </div>
   <div class="form-group has-success">
    <label class="text-primary">
         Title:
    </label>
    <textarea rows="3" class="form-control form-control-success mb-4"  name="title"></textarea>
  </div>
   <div class="form-group has-success">
    <label class="text-primary">
         Category Id:
    </label>
    <textarea rows="3" class="form-control form-control-success mb-4"  name="category_id"></textarea>
  </div>
  <div class="form-group has-success">
    <label class="text-primary">
         Full Content:
    </label>
    <textarea rows="3" class="form-control form-control-success mb-4"  name="fullContent"></textarea>
  </div>
   <div class="form-group has-success">
    <label class="text-primary">
         Short Content:
    </label>
    <textarea rows="3" class="form-control form-control-success mb-4"  name="shortContent"></textarea>
  </div>
  <div class="form-group has-success">
    <label class="text-primary">
         Image:
    </label>
    <textarea rows="3" class="form-control form-control-success mb-4"  name="image"></textarea>
  </div>
  <div class="form-group has-success">
    <label class="text-primary">
         Status:
    </label>
    <textarea rows="3" class="form-control form-control-success mb-4"  name="status"></textarea>
  </div>
    <button class="btn btn-lg btn-danger" type="submit">Submit</button>
</form>
{{/if}}
</div>
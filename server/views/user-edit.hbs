<div class="container">
  <div class="content">
    {{#if data}}
    <h3 class="text-success">Edit User</h3>
    <form method="post" onsubmit="return usersValidator()">
      <div class="form-group has-success">
        <label class="text-primary">
          Full Name:
        </label>
        <input id="fullName" type="text" value={{data.full_name}} class="form-control form-control-success mb-4" name="fullName"
        />
        <span id="fullNameError" class="text-danger"></span>
      </div>
      <div class="form-group has-success">
        <label class="text-primary">
          Email:
        </label>
        <input id="email" type="email" value={{data.email}} class="form-control form-control-success mb-4" name="email" />
        <span id="emailError" class="text-danger"></span>
      </div>
      <div class="form-group has-success">
        <select id="role" class="form-control" name="role">
          <option value="" class="text-primary">Select Role:</option>
          <option selected value={{data.role}}>{{data.role}}</option>
          <option value="None">None</option>
          <option value="Admin">Admin</option>
          <option value="Editor">Editor</option>
        </select>
        <span id="roleError" class="text-danger"></span>
      </div>
      <button class="btn btn-lg btn-primary" type="submit">Update</button>
    </form>
    {{/if}}
  </div>
</div>